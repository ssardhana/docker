 FROM ubuntu:22.04 as unzip
 RUN mkdir /nopCommerce
 RUN    apt update && \
        apt install unzip && \
        cd /nopCommerce && \
        wget "https://github.com/nopSolutions/nopCommerce/releases/download/release-4.60.6/nopCommerce_4.60.6_NoSource_linux_x64.zip" /nopCommerce/nopCommerce_4.60.6_NoSource_linux_x64.zip && \
        unzip /nopCommerce/nopCommerce_4.60.6_NoSource_linux_x64.zip && mkdir bin logs

 FROM mcr.microsoft.com/dotnet/aspnet:6.0
 LABEL author="srikanth"
 COPY  --from=unzip /nopCommerce /nopCommerce
 WORKDIR /nopCommerce
 EXPOSE 5000
 CMD ["dotnet","/nopCommerce/Nop.Web.dll"]
